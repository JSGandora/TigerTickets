                    <a id = "confirmSellButton" class="btn btn-success btn-ok" data-dismiss="modal" onclick="confirmSellRequest(this)">Confirm</a>
                </div>
            </div>
        </div>

    </div>

    <!-- CONFIRM COMPLETED BUY Request Modal -->
